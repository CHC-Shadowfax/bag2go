<div class="container">
  <div class="row justify-content-center text-center">
    <h1 class="m-3"><strong>Bags2go!</strong></h1>
    <p>Rent your bags with us!</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between">
    <div class="m-1 p-5 border">
      <h2 class="text-center m-1">All Bags</h2>
      <p>Choose a bag you like!</p>
      <p class="text-center"> <%= link_to "See our Bags!", bags_path, class: "btn btn-outline-primary" %> </p>
    </div>
    <div class="m-1 p-5 border">
      <h2 class="text-center m-1">My Bags</h2>
      <% bags.each do |bag| %>
        <%= link_to "Bag #{bag.id}", bag %>
        <br/>
      <% end %>
      <br/>
      <h2 class="text-center m-1">Bookings to My Bags</h2>
      <% bookings_as_owner.each do |booking| %>
        <%= link_to "Booking #{booking.id}", [booking.bag, booking] %>
        <br/>
      <% end %>
    </div>
    <div class="m-1 p-5 border">
      <h2 class="text-center m-1">My Requested Bags</h2>
      <% bags_as_customer.each do |bag| %>
        <%= link_to "Bag #{bag.id}", bag %>
      <% end %>
      <br/>
    <h2 class="text-center m-1">My placed bookings</h2>
      <% bookings.each do |booking| %>
        <%= link_to "Booking #{booking.id}", [booking.bag, booking] %>
        <br/>
      <% end %>
    </div>
  </div>
</div>
