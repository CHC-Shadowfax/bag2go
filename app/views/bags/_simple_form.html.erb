  <%= simple_form_for @bag do |f| %>
  <%= f.input :name, placeholder: ' Name your bag!' %>
  <%= f.input :price_day, placeholder: 'Bag price per day' %>
  <%= f.input :description, placeholder: 'Add description' %>
