<h1 class="text-center p-2" ><strong> All Bags</strong> </h1>
<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: bags_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find your perfect bag try --> Blue, Wooden, Small "
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render 'bags/listshow', bags: @bags %>
