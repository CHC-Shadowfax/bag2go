<!--primer container-->
<section class="container1">
  <div class="container-fluid">
    <div class="row">
      <div class="col-6 text-center">
        <h1 class="m-3"><strong>Bags2go!</strong></h1>
        <p>We have the perfect bag, rent with us!</p>
        <p class="text-center"> <%= link_to "See our Bags!", bags_path, class: "btn btn-outline-primary" %> </p>
        <p class="text-center"><%= link_to "List your Bag!",  new_bag_path, class: "btn btn-outline-success" %></p>
      </div>
      <div class="col-6">
       <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://imagenes.elpais.com/resizer/WSLKIlqg0_0RvREWdNuyF35Dx2Y=/1960x1103/cloudfront-eu-central-1.images.arcpublishing.com/prisa/TIEFNHHQSBF2BP3QC7YPH3PIWI.jpg" class="d-block w-100" alt="maleta aeropuerto">
          </div>
          <div class="carousel-item">
            <img src="https://camotrek.com/wp-content/uploads/2019/12/hiking-backpack-packed-main.jpg" class="d-block w-100" alt="Camping Bag">
          </div>
          <div class="carousel-item">
            <img src="https://www.travelandleisure.com/thmb/NVMbZf-RIGe_KGlg9QnyGATa4pw=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/TAL-asenlin-40l-travel-backpack-0517-ba0f42a7cca84cf0bdef9ebe7f879f5f.jpg" class="d-block w-100" alt="Backpack">
          </div>
        </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
  </div>
</section>

