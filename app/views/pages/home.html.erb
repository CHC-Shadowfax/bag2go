<!--primer container-->
<section class="container1">
  <div class="container-fluid">
    <div class="row">
      <div class="col-6 text-center">
        <h1 class="m-3"><strong>Bags2go!</strong></h1>
        <p>We have the perfect bag, rent with us!</p>
        <p class="text-center"> <%= link_to "See our Bags!", bags_path, class: "btn btn-outline-primary" %> </p>
        <p class="text-center"><%= link_to "List your Bag!",  new_bag_path, class: "btn btn-outline-success" %></p>
      </div>
      <div class="col-6">
       <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="images/maleta1.png" class="d-block w-100" alt="maleta aeropuerto">
          </div>
          <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="..." class="d-block w-100" alt="...">
          </div>
        </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
  </div>
</section>

<!--segundo container-->
  <section class="container2">
    <div class="container">
      <div class="row text-align-center text-center">
        <div class="col-4">
          <i class="fa-solid fa-person-walking-luggage"></i>
          <h2>Find your perfect bag for travelling</h2>
        </div>
        <div class="col-4">
          <i class="fa-solid fa-suitcase"></i>
          <h2>Find a Backpack or suitcase</h2>
        </div>
        <div class="col-4">
          <i class="fa-solid fa-bag-shopping"></i>
          <h2>Make money by renting your bag!</h2>
        </div>
      </div>
    </div>
  </section>

<!--tercer container-->
